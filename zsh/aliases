
#
# .zsh/aliases
# Maintainer:	Philipp Millar <philipp.millar@gmx.de>
#

# configuration
DOWNLOAD=$HOME/down
GEBURTSTAGE=$HOME/.pim/geburtstage
STUNDENPLAN=$HOME/.pim/stundenplan

# root {{{
if [[ $EUID = 0 ]]; then
	# show open connections
	alias hullbreak="netstat --all --numeric --programs --inet"
	# VPN university
	alias UniVPN="openvpn --daemon --config /etc/openvpn/openvpn-2.1.client.conf"
fi
# }}}
# sudo {{{
if [[ $EUID != 0 ]];then
	# System
	alias poweroff="sudo poweroff"
	alias reboot="sudo reboot"
	# show open connections
	alias hullbreak="sudo netstat --all --numeric --programs --inet"
	# VPN university
	alias UniVPN="sudo openvpn --daemon --config /etc/openvpn/openvpn-2.1.client.conf"
        # update mirrorlist using reflector
        alias reflector="sudo reflector -c Germany -l 10 --sort score --save /etc/pacman.d/mirrorlist && cat /etc/pacman.d/mirrorlist"
        # pacman
        alias pacman="pacman-color"
fi
#}}}
# host specific {{{
# littlesmoke
if [[ $HOST = littlesmoke && $EUID != 0 ]]; then
    # netcfg
    alias netcfg="sudo netcfg"
    alias wifi-select="sudo wifi-select -p"
fi #  }}}
# aliases {{{
# ls
alias ls="ls --color=auto"
alias l="ls -lhFB"
alias la="ls -lAhB"
# diff
alias diff="colordiff"
# grep
alias grep="grep -i --color=auto"
# less
alias more="less"
# df/du
alias df="df -hT --total"
alias dfc="dfc -sTt -rootfs,devtmpfs,tmpfs"
alias du="du -ch"
# chown
alias c6="chmod 600"
alias c7="chmod 700"
# mkdir
alias md="mkdir -p"

# directory stack
alias d="dirs -v"
#jobs
alias j="jobs -l"

# vim
alias v="vim"
alias vp="vim -p"
alias vrc="vim ~/.vim/vimrc"
# tmux
alias tmux="tmux -u"
alias ta="tmux attach"
alias tls="tmux ls"
# start bc without startup-message
alias bc="bc -q"

# cclive - Youtube download
alias cclive="cclive --output-dir $DOWNLOAD"
# pastebin sprunge.us (<command> | sprunge)
alias sprunge="curl -F 'sprunge=<-' http://sprunge.us"
# find out own ip
alias myip="lynx -dump tnx.nl/ip"
# lookup network traffic
alias traffic="vnstat -tr"

# udiskie
alias uumount="udiskie-umount 2> /dev/null"
# mail
alias mail="tail -n5 ~/.mutt/log/fdm.log"
# }}}
# archlinux {{{
alias printpkglist="comm -23 <(pacman -Qeq | sort) <(pacman -Qmq | sort)"
alias mpkg="makepkg -cis"
# }}}
# git {{{
alias g="git"

alias ga="git add"
alias gp="git push"

alias gc="git commit"
alias gca="git commit -a"

alias gco="git checkout"
alias gcl="git clone"

alias gbr="git branch"

alias gl="git log"
alias gs="git status"
alias gd="git diff"
# }}}
# PIM {{{
# todo.sh
alias t="todo.sh"

# calendar
# never suspend for timed reminders
alias rem="rem -q"
alias cal="cal -3"
alias calendar="rem -c+2 -w160 -m -b1"
alias m="rem -c+4 -w160 -m -b1 | less"
alias dm="rem -c+8 -w160 -m -b1 | less"
alias ddm="rem -c+16 -w160 -m -b1 | less"
alias stu="sed 's/%\"%\"%3: //g;s/          /:: /g' $STUNDENPLAN | remind -c+1 -w160 -m -b1 -"
#}}}

# vim:set sw=4 foldmethod=marker ft=zsh:
