
#
# .zsh/environment
# Maintainer:	Philipp Millar <philipp.millar@gmx.de>
#

export SHELL='/bin/zsh'

export PATH=$PATH:$HOME/bin:/usr/bin/vendor_perl/:$HOME/.gem/ruby/1.9.1/bin
export GPG_TTY=$(tty)
export GEM_HOME="~/.gem/ruby/1.9.1"

export EDITOR=vim
export PAGER=less
export PDFVIEWER=zathura
export BROWSER=firefox
export TERMINAL=urxvtc

export MOZ_DISABLE_PANGO=1
export DOTREMINDERS=$HOME/.pim/reminders

# todo.txt
export TODOTXT_CFG_FILE="$HOME/.config/todotxt.cfg"

# less
export LESSHISTFILE=/dev/null
eval `lesspipe.sh`

# python
export PYTHONDOCS=/usr/share/doc/python/html/

# mail
MAILPATH="$HOME/mail"
MAILCHECK=10

# vim:set sw=4 foldmethod=marker ft=zsh:
