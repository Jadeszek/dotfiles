export SHELL='/bin/zsh'

export PATH=$PATH:$HOME/bin:/usr/bin/vendor_perl/
export GPG_TTY=$(tty)

export EDITOR=vim
export PAGER=less
export PDFVIEWER=zathura
export BROWSER=firefox

export MOZ_DISABLE_PANGO=1
export DOTREMINDERS=$HOME/.pim/reminders

# todo.txt
export TODOTXT_CFG_FILE="$HOME/.config/todotxt.cfg"

# less
export LESSHISTFILE=/dev/null
eval `lesspipe.sh`

# python
export PYTHONDOCS=/usr/share/doc/python/html/

# vim:set sw=4 foldmethod=marker ft=zsh:
