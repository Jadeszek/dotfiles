#!/usr/bin/env ruby
# encoding: utf-8
# just a convenience wrapper for etckeeper

Commands = %w{init commit pre-commit pre-install post-install
              unclean update-ignore vcs uninit}

exit 1 if ARGV[0].nil?

if Commands.include? ARGV[0]
  exec "sudo etckeeper #{ARGV.join(' ')}"
else
  exec "sudo etckeeper vcs #{ARGV.join(' ')}"
end
