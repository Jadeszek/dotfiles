#!/bin/zsh
# Simple Backup to encrypted Copy.com folder, for most important data

PICTURES_DECRYPT="$HOME/Share/Decrypt/Copy-Bilder/"
DOCUMENTS_DECRYPT="$HOME/Share/Decrypt/Copy-Dokumente/"

print "Backing up Pictures"
mountpoint $PICTURES_DECRYPT || \
	encfs ~/Share/Copy/Bilder/ $PICTURES_DECRYPT
rsync -Pav /mnt/data/pmi/Pictures/ $PICTURES_DECRYPT
fusermount -u $PICTURES_DECRYPT

print "\n"

print "Backing up Documents"
mountpoint $DOCUMENTS_DECRYPT || \
	encfs ~/Share/Copy/Dokumente/ $DOCUMENTS_DECRYPT
rsync -Pav /mnt/data/pmi/Documents/ $DOCUMENTS_DECRYPT
fusermount -u $DOCUMENTS_DECRYPT

