#!/bin/zsh

local IMAGEPATH="/home/philipp/.icons"

case $1 in
    stop)
	mpc stop
	image="$IMAGEPATH/MD-stop.png"
	topic="MPD - Stop"
	message="Stopped Playback"
	;;
    toggle)
	state=$(mpc toggle | grep -o "\[paused\]\|\[playing\]")
        case $state in
	    "[paused]")
		image="$IMAGEPATH/MD-pause.png"
		topic="MPD - Pause"
		;;
	    "[playing]")	
		image="$IMAGEPATH/MD-play.png"
		topic="MPD - Play"
		;;
	    *)
		image="$IMAGEPATH/MD-resume.png"
		topic="MPD - Play/Pause"
		;;
	esac
	message="$(mpc current)"
	;;
    next)
	mpc next
	image="$IMAGEPATH/MD-next.png"
	topic="MPD - Next Song"
	message="$(mpc current)"
	;;
    prev)
	mpc prev
	image="$IMAGEPATH/MD-previous.png"
	topic="MPD - Previous Song"
	message="$(mpc current)"
	;;
    *)
	image="null"
	topic="MPD - Status"
	message="$(mpc current)"
	;;
esac

notify-send -i $image -u normal $topic $message
