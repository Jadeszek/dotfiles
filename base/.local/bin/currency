#!/bin/sh
# quickly convert currencies

if test -z "$1" || \
   test -z "$2" || \
   test -z "$3"
then
  echo "usage: $0 amount from-currency to-currency"
  echo "example: $0 40 EUR USD"
else
  wget -qO- "http://www.google.com/finance/converter?a=$1&from=$2&to=$3&hl=es" |  sed '/res/!d;s/<[^>]*>//g';
fi

