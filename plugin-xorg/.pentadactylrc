command! proxy -nargs=1 :set! network.proxy.type=<args>
command! image -nargs=1 :set! permissions.default.image=<args>

command! gissue -count -nargs=1 :tabopen https://github.com/<args>/issues/<count>

nmap cot :set guioptions+=T<CR>
nmap con :set guioptions-=T<CR>
nmap coT :set showtabline=always<CR>
nmap coN :set showtabline=never<CR>
nmap cob :sidebar! Bookmarks<CR>
nmap coh :sidebar! History<CR>
nmap cod :sidebar! Downloads<CR>

nmap -builtin <C-j> <nop>
nmap -builtin <C-k> <nop>

nmap vi :dialog pageinfo<CR>
nmap vb :dialog bookmarks<CR>

nmap s :open !
nmap S :tabopen !

nmap -builtin j 5j
nmap -builtin k 5k

set guioptions=bCrsn
set defsearch=duckduckgo

nmap \\\\ <C-^>

set titlestring="Mozilla Firefox"
