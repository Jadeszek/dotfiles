#!/usr/bin/env zsh
# workflow automation for pacman and cower
# main script

source ${PAC_CONF:-$HOME/.pac/config}

case "$1" in

  "update"|"up"|"u")
    $PAC_BIN/pac-update
    ;;

  "search"|"s")
    shift
    $PAC_BIN/pac-search $*
    ;;

  "get"|"g")
    shift
    $PAC_BIN/pac-get $*
    ;;

  "build"|"b")
    shift
    cd $PAC_BUILD
    $PAC_BIN/pac-build $*
    ;;

  "depend"|"p")
    shift
    cd $PAC_BUILD
    $PAC_BIN/pac-depend $*
    ;;

  "devel"|"d")
    $PAC_BIN/pac-devel
    ;;

  *)
    echo "Usage: $0 update|search|get|build"
    exit 1

esac

