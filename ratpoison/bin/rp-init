#!/usr/bin/env zsh

# configre screens
rp-screens startup

# autostart
compton &
nm-applet &
nitrogen --restore &
pasystray &
xrandr | grep -q "HDMI2 connected" && xrandr --output LVDS1 --auto --left-of HDMI2 --output HDMI2 --auto

# start st with tmux
# attach, if session exists, create a new one else
st -c "terminal" -t "terminal" -e ~/bin/tm-aon &

ratpoison
