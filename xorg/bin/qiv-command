#!/usr/bin/env zsh

key=$1
fname=$2
target_dir="$HOME/tmp/$(date +%F)"

case "$key" in
    0)
        # delete image
        rm $fname
        ;;
    1)
        # copy image to directory in ~/tmp
        mkdir -p $target_dir
        cp $fname $target_dir
        ;;
    2)
        # move image to directory in ~/tmp
        mkdir -p $target_dir
        mv $fname $target_dir
        ;;
    *)
        # do nothing
        print "unknown key"
        ;;
esac
