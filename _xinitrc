
#
# .xinitrc
#

# load settings for X
xset +fp /usr/share/fonts/local
xset fp rehash
[[ -f ~/.Xresources ]] && xrdb -merge ~/.Xresources
xsetroot -cursor_name left_ptr

# xinitrc.d global settings
if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

# disable screensaver
xset s off
xset -dpms
# disable bell
xset -b

# configre screens
~/bin/setup-screens startup

# autostart
xbindkeys &
srandrd -n ~/bin/setup-screens &
dropbox running && dropbox start &
nm-applet &

xterm -title "xterm" -e tmux -f ~/.tmux-attach-or-new.conf attach &

exec ratpoison

# vim:set ft=sh sw=2:
